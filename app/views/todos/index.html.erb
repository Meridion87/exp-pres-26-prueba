<% @todos.each do |todo| %>
<div style="border-style: dotted;">
  <h2> <%=todo.description%>  </h2>
  <!-- <p> <%= todo.completed %> </p> -->
  <%= link_to "Mostrar", todo, class: 'btn btn-primary'  %>
  <%= link_to "Editar", update_path(todo), class: 'btn btn-warning'  %>
  <%= link_to "Borrar", todo, method: :delete, class: 'btn btn-danger'  %>
</div>

<% end %>
